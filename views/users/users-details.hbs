<div class="posts">
    <div class="row justify-content-center">
        <div class="col-lg-9" style="margin-top: 10px;">
            <div class="card">
                <div class="card-header">
                  <a href="/users/newUserForm">New User</a>
                </div>
                <div class="card-body">
                    {{#if this.data}}   
                        {{#each this.data}}  
                            <div class="card-header">
                                <h2>{{id}}: {{name}}</h2>
                                <p class="card-text"><strong>email</strong> : {{email}}</p>
                                <p class="card-text"><strong>Twitter</strong> : {{twitter_link}}</p>
                                <p class="card-text"><strong>Linked in</strong> : {{linkedin_url}}</p>
                                <p class="card-text"><strong>Blog</strong> : {{blog_URL}}</p>
                                <a href="/users/"  class="btn btn-primary">Back</a>
                                <a href="/users/updateUserForm/{{id}}"  class="btn btn-primary">Update user</a>
                                <a href="/users/delete/{{id}}"  class="btn btn-primary">Delete</a>
                            </div>
                        {{/each}}                       
                    {{else}}
                        <tr>
                            <td>No users yet!</td>
                        </tr>
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
</div>